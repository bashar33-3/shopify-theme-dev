},
{
"id": "slide_url",
"type": "url",
"label": "URL",
"info": "Enter a URL for the slide."
}
]
}
],
"presets": [
{
"name": "6 Small Cards Slider",
"category": "Custom"
}
],
"max_blocks": 6
}
{% endschema %}